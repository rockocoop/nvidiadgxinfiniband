FROM  nvcr.io/nvidia/cuda:12.6.1-cudnn-devel-ubuntu24.04

USER root

RUN apt-get update && apt-get install build-essential git libibverbs-dev librdmacm-dev libibumad-dev autoconf libtool libpci-dev ibverbs-utils -y && mkdir /cuda

WORKDIR /cuda

RUN git clone https://github.com/linux-rdma/perftest.git && cd perftest/ && export LD_LIBRARY_PATH="/usr/local/cuda/lib64${LD_LIBRARY_PATH:+:${LD_LIBRARY_PATH}}" && export CUDA_H_PATH="/usr/local/cuda/include/cuda.h" && ./autogen.sh && ./configure --prefix=/usr --sbindir=/usr/bin --libexecdir=/usr/lib --sysconfdir=/etc --localstatedir=/var --mandir=/usr/share/man && make -j "$(($(nproc) + 1))" && make install
